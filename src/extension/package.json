{
  "name": "sharp-code-search",
  "displayName": "Sharp Code Search",
  "description": "Semantic pattern-based search and replace for C# codebases",
  "version": "0.0.1",
  "publisher": "sharpcodesearch",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:csharp",
    "workspaceContains:**/*.cs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sharpCodeSearch.search",
        "title": "Sharp Code Search: Search",
        "icon": "$(search)"
      },
      {
        "command": "sharpCodeSearch.replace",
        "title": "Sharp Code Search: Replace",
        "icon": "$(replace)"
      },
      {
        "command": "sharpCodeSearch.catalog",
        "title": "Sharp Code Search: Pattern Catalog",
        "icon": "$(book)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "sharpCodeSearch.search",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "sharpCodeSearch.replace",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "sharpCodeSearch.catalog",
          "when": "workspaceFolderCount > 0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/vscode": "^1.108.1",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/SharpCodeSearch.git"
  }
}